<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mycamera.ping.com.mycamera">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".camera.CustomCamera" />
        <activity android:name=".camera.CameraResult" />
        <activity android:name=".show.ShowActivity" />
        <activity android:name=".shexiang.Move"></activity>
        <activity
            android:name=".shexiang.VideoActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".shexiang.ControllerActivity" />
        <activity android:name=".BaseActivity"></activity>
    </application>

</manifest>